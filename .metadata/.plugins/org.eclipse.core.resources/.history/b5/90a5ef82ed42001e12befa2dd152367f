<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>유기동물 정보</title>
</head>
<body>
    <h1>유기동물 정보</h1>
    <table border="1" id="animalTable">
        <tr>
            <th>동물이름</th>
            <th>유기날짜</th>
            <th>보호소이름</th>
        </tr>
    </table>
    <script>
        var apiKey = "ne53vYZ%2FHctQxGJhVLlcKvtvzi%2FHNfY42exeWo4iiO%2FxrJTgFukzupa98bwUDM318BruDv8y8kWtQDh76hClvQ%3D%3D";
        var apiUrl = "https://www.data.go.kr/data/15098915/openapi.do";

        fetch(apiUrl + "?key=" + apiKey) // 인증키를 요청 매개변수로 추가
            .then(response => response.json())
            .then(data => {
                var animalTable = document.getElementById("animalTable");
                var items = data.response.body.items.item;

                items.forEach(item => {
                    var row = animalTable.insertRow();
                    var cell1 = row.insertCell(0);
                    var cell2 = row.insertCell(1);
                    var cell3 = row.insertCell(2);
                    cell1.innerHTML = item.popfile; // 동물 사진 URL 등으로 대체
                    cell2.innerHTML = item.happenDt;
                    cell3.innerHTML = item.jongAddr;
                });
            })
            .catch(error => console.error("API 호출 오류:", error));
    </script>
</body>
</html>
